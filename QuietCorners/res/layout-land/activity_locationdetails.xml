<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LocationDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_toLeftOf="@+id/picture">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Brightness"
                android:id="@+id/textView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="right"
                android:layout_gravity="right">

                <RatingBar
                    android:id="@+id/rtbLightRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:numStars="5"
                    android:rating="0"
                    android:isIndicator="false"
                    style="@style/foodRatingBar"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/noiselessness"
                android:id="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <RatingBar
                    style="@style/foodRatingBar"
                    android:id="@+id/rtbQuietRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:numStars="5"
                    android:rating="0"
                    android:isIndicator="false"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/hasOpenWifi"
                android:id="@+id/textView4"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:gravity="right"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txtHasOpenNetwork"
                    android:textColor="@color/text"
                    android:layout_marginRight="4dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/OverallRating"
                android:id="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="gravity"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <RatingBar
                    style="@style/foodRatingBar"
                    android:id="@+id/rtbOverallRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:numStars="5"
                    android:rating="0"
                    android:isIndicator="false"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picture"
        android:minHeight="200dp"
        android:minWidth="330dp"
        android:background="@color/black_overlay"
        android:contentDescription="@string/pictureDescription"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Coments"
            android:id="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text"
            android:layout_marginTop="10dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvComments"
            android:background="@color/black_overlay"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:smoothScrollbar="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addComment"
            android:id="@+id/addComment"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignRight="@+id/lvComments" />
    </RelativeLayout>

</RelativeLayout>
